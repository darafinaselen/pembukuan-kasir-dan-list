# contoh .env untuk docker-compose
# Salin file ini menjadi `.env` dan sesuaikan nilainya sebelum menjalankan `docker-compose up`.

# Postgres
POSTGRES_USER=app_user
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=app_db
# Port yang akan dipetakan ke host (opsional). Default di compose: 5432
POSTGRES_PORT=5432

# Prisma / DATABASE_URL (contoh, gunakan nilai di atas atau sesuaikan)
# Format untuk Prisma: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://app_user:supersecretpassword@localhost:5432/app_db?schema=public

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadminpassword
MINIO_BUCKET=my-bucket
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Opsional: custom host/ports
APP_HOST=localhost
APP_PORT=3000
